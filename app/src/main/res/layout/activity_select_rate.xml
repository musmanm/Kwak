<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.muhammadmajeed.insultgenerator.SelectRate"
    android:background="#212121"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_row="0"
    android:layout_column="1"
    android:measureWithLargestChild="false"
    android:touchscreenBlocksFocus="false">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:onClick="onClickAdult"
        android:layout_height="0dp"
        android:id="@+id/imageButton"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:background="@drawable/adult"
        android:src="@drawable/adult" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:onClick="onClickPG"
        android:layout_height="0dp"
        android:id="@+id/imageButton2"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:src="@drawable/child"
        android:background="@drawable/child" />



</LinearLayout>
