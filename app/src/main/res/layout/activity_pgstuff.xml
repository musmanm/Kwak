<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.muhammadmajeed.insultgenerator.PGStuff"
    android:background="#212121"
    android:clickable="true"
    android:orientation="vertical"
    android:measureWithLargestChild="false"
    android:touchscreenBlocksFocus="false"
    android:weightSum="1">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/classical"
        android:layout_weight="0.143"
        android:onClick="onClickClassical"
        android:src="@drawable/classical"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:adjustViewBounds="false" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/hiphop"
        android:layout_weight="0.143"
        android:src="@drawable/fantasy"
        android:onClick="onClickHiphop"
        android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Scifi"
        android:layout_weight="0.143"
        android:onClick="onClickScifi"
        android:src="@drawable/scifi"
        android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/British"
        android:layout_weight="0.143"
        android:onClick="onClickBritish"
        android:src="@drawable/british"
        android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Normal"
        android:layout_weight="0.143"
        android:onClick="onClickNormal"
        android:src="@drawable/normal"
        android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Smart"
        android:layout_weight="0.143"
        android:onClick="onClickSmart"
        android:src="@drawable/science"
        android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Mama"
        android:layout_weight="0.143"
        android:onClick="onClickMama"
        android:src="@drawable/mama"
        android:scaleType="centerCrop" />

</LinearLayout>
